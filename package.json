{
  "name": "wuzzle",
  "description": "",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/host1-tech/wuzzle.git"
  },
  "engines": {
    "node": ">=10",
    "yarn": ">=1"
  },
  "scripts": {
    "build": "tsc --build",
    "watch": "tsc --build --watch",
    "clean": "run-s clean:*",
    "clean:built": "rimraf 'packages/*/@(lib|tsconfig.tsbuildinfo)'",
    "clean:coverage": "rimraf '**/.nyc_output' '**/coverage'",
    "clean:cache": "rimraf '**/node_modules/.cache'",
    "clean:installed": "rimraf '**/node_modules'",
    "test": "jest --no-cache",
    "test:watch": "jest --no-cache --watch",
    "coverage": "./scripts/coverage.ts",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint '**/*.@([jt]s?(x)|json)'",
    "lint:prettier": "prettier --check '**/*.@([jt]s?(x)|json)'",
    "fix": "run-s fix:*",
    "fix:eslint": "eslint --fix '**/*.@([jt]s?(x)|json)'",
    "fix:prettier": "prettier --write '**/*.@([jt]s?(x)|json)'",
    "postinstall": "yarn build && lerna run --stream fixtures:install"
  },
  "lint-staged": {
    "*.@([jt]s?(x)|json)": [
      "eslint",
      "prettier --check"
    ]
  },
  "commitlint": {
    "extends": "@commitlint/config-conventional"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@types/jest": "^26.0.10",
    "@types/node": "^12.12.6",
    "@types/shelljs": "^0.8.8",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "commander": "^6.1.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-json": "^2.1.2",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.2.0",
    "execa": "^4.1.0",
    "find-up": "^5.0.0",
    "husky": "^4.2.5",
    "jest": "^26.4.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "tree-kill": "^1.2.2",
    "ts-jest": "^26.2.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  }
}
