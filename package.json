{
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/licg9999/wuzzle.git"
  },
  "engines": {
    "node": ">=10",
    "yarn": ">=1"
  },
  "scripts": {
    "build": "ts-node scripts/build.ts",
    "watch": "yarn build --watch",
    "clean": "run-s clean:*",
    "clean:built": "rimraf \"packages/*/@(lib|tsconfig.tsbuildinfo)\"",
    "clean:coverage": "rimraf coverage",
    "clean:cache": "rimraf node_modules/.cache \"packages/*/node_modules/.cache\" \"e2e/fixtures/*/node_modules/.cache\"",
    "clean:installed": "rimraf node_modules \"packages/*/node_modules\" \"e2e/fixtures/*/node_modules\"",
    "test": "jest --testPathIgnorePatterns e2e",
    "test:watch": "yarn test --watch",
    "coverage": "yarn test --coverage",
    "e2e": "jest --no-cache e2e",
    "lint": "run-p lint:*",
    "lint:eslint": "yarn eslint",
    "lint:prettier": "yarn prettier --check",
    "fix": "run-s fix:*",
    "fix:eslint": "yarn eslint --fix",
    "fix:prettier": "yarn prettier --write",
    "eslint": "eslint \"**/*.@([jt]s?(x)|json)\"",
    "prettier": "prettier \"**/*.@([jt]s?(x)|json)\"",
    "release": "lerna version",
    "release:pre": "lerna version --conventional-prerelease",
    "publish:npm": "lerna publish from-package --registry https://registry.npmjs.org",
    "postinstall": "yarn build",
    "fixtures:install": "ts-node scripts/fixtures.ts install"
  },
  "lint-staged": {
    "*.@([jt]s?(x)|json)": [
      "eslint",
      "prettier --check"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@types/glob": "^7.1.3",
    "@types/jest": "^26.0.10",
    "@types/node": "^12.12.6",
    "@types/shelljs": "^0.8.8",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "@wuzzle-utils/conventional-changelog-conventionalcommits": "file:utils/conventional-changelog-conventionalcommits",
    "chalk": "^4.1.0",
    "commander": "^6.1.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-json": "^2.1.2",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.2.0",
    "execa": "^4.1.0",
    "glob": "^7.1.6",
    "husky": "^4.2.5",
    "jest": "^26.4.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "ts-jest": "^26.2.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7",
    "wait-for-expect": "^3.0.2"
  }
}
