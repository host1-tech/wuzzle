{
  "name": "wuzzle",
  "description": "",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/host1-tech/wuzzle.git"
  },
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "tsc --build",
    "watch": "tsc --build --watch",
    "clean": "shx rm -fr '**/tsconfig.tsbuildinfo' 'packages/*/lib'",
    "clear": "lerna clean --yes && shx rm -fr node_modules",
    "test": "jest",
    "lint": "eslint '**/*.@([jt]s|json)'",
    "format": "prettier --write '**/*.@([jt]s|json)'"
  },
  "lint-staged": {
    "*.@([jt]s|json)": [
      "eslint",
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": "@commitlint/config-conventional"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@types/jest": "^26.0.10",
    "@types/node": "^12.12.6",
    "@types/shelljs": "^0.8.8",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "find-up": "^5.0.0",
    "husky": "^4.2.5",
    "jest": "^26.4.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "shelljs": "^0.8.4",
    "shx": "^0.3.2",
    "ts-jest": "^26.2.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  }
}
